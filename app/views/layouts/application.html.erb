<!DOCTYPE html>
<html>
<head>
<title><%= @page_title || 'Emporium' %></title>
<%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
<%= javascript_include_tag "defaults", "data-turbolinks-track" => true %>
<%= csrf_meta_tags %>
</head>
<body>
<% if flash[:notice] %>
<div id="notice">
<%= flash[:notice] %>
</div>
<% end %>
<%= "<h1>#{@page_title}</h1>".html_safe if @page_title %>
<%= yield %>
</body>
</html>